name: 'Trigger tests'
on:
  push:
    branches: [main]

jobs:
  trigger-tests:
    runs-on: ubuntu-latest
  steps:
    - name: 'Triggers test repo workflow'
      run: |
        curl -X POST \
            -H "Accept: application/vnd.github+json" \
            -H "Authorization: token ${{ secrets.ACCESS_GIT_TOKEN }}" \
            https://api.github.com/repos/viktor7cr7/test-automation-framework/dispatches \
            -d '{"event_type":"run-tests"}'
